header.header
  a(href='/').logo
    img(src='/img/svg/logo.svg' alt='')
    span exal.money
  .header-menu
    ul.nav(role='tablist')
      li
        a#contacts-tab.header-menu__link(data-toggle='tab', href='#contacts', role='tab', aria-controls='contacts', aria-selected='true')
          .icons.menu-info
          .notification 2
      li
        a#my-operations-tab.header-menu__link(data-toggle='tab', href='#my-operations', role='tab', aria-controls='my-operations', aria-selected='false')
          .icons.menu-icons
      li
        a#accounts-list-tab.header-menu__link(data-toggle='tab', href='#accounts-list', role='tab', aria-controls='accounts-list', aria-selected='false')
          .icons.menu-payments
      li
        a#user-info-tab.header-menu__link(data-toggle='tab', href='#user-info', role='tab', aria-controls='user-info', aria-selected='false')
          .icons.menu-settings-info
      li
        a#links-tab.header-menu__link(data-toggle='tab', href='#links', role='tab', aria-controls='links', aria-selected='false')
          .icons.menu-icons-burger
          .notification 2
    #nav-tabContent.tab-content
      #contacts.tab-pane.fade(role='tabpanel', aria-labelledby='contacts-tab')
        h2 Контакты
        #contacts-info.accordion
          .card
            #headingOne.card-header.collapsed(data-toggle='collapse', data-target='#collapseOne', aria-expanded='true', aria-controls='collapseOne')
              span Мессенджеры
            #collapseOne.collapse(aria-labelledby='headingOne', data-parent='#contacts-info')
              include ../components/messengers
          .card
            #headingTwo.card-header.collapsed(data-toggle='collapse', data-target='#collapseTwo', aria-expanded='false', aria-controls='collapseTwo')
              span Форма обратной связи
            #collapseTwo.collapse(aria-labelledby='headingTwo', data-parent='#contacts-info')
              include ../components/contact-form
          .card
            #headingThree.card-header.collapsed(data-toggle='collapse', data-target='#collapseThree', aria-expanded='false', aria-controls='collapseThree')
              span Адрес и реквизиты
            #collapseThree.collapse(aria-labelledby='headingThree', data-parent='#contacts-info')
              include ../components/contact-address
      #my-operations.tab-pane.fade(role='tabpanel', aria-labelledby='my-operations-tab')
        | Lorem ipsum dolor, sit amet consectetur adipisicing elit. Nihil, aut.
      #accounts-list.tab-pane.fade(role='tabpanel', aria-labelledby='accounts-list-tab')
        .currency-reserves
          .d-flex.align-items-center.mb-2.position-relative
            a.back-link(href='#')
            h2.sidebar-title Список счетов
          form(action='#').settings
            .form-group
              input(type='text', required='' value='azaza').form-control
              span.form-underline
              label Логин:
            .form-group
              input(type='text', required='' disabled='disabled' value='azaza@mail.ru').form-control
              span.form-underline
              label Email:
            .checkbox-form
              input#pass-recovery.styled-checkbox(type='checkbox', value='value1')
              label(for='pass-recovery') Разрешить восстановление пароля
            .checkbox-form
              input#email-notification.styled-checkbox(type='checkbox', value='value1')
              label(for='email-notification') Уведомление на email при входе
            .checkbox-form
              input#confirmation-email.styled-checkbox(type='checkbox', value='value1')
              label(for='confirmation-email') Вход с подтверждением через email
            .form-group
              button.send-btn Сохранить
              a(href='#' data-link='change-password.html').change-pass.load-page Сменить текущий пароль
      #user-info.tab-pane.fade(role='tabpanel', aria-labelledby='user-info-tab')
        .menu-height
          .user-info
            span Привет, artmoney
            .discount Накопительная скидка – 10%
          ul.links-list
            li
              a(href='#' data-link='personal-info.html').load-page Личная информация
            li
              a(href='#' data-link='settings.html').load-page Настройки безопасности
            li
              a(href='#') Выйти
          .partners-info.mt-auto
            .partners-info__title Партнерская ссылка:
            form(action='')
              .partners-info__copy
                input(type='text' disabled='disabled' value='Exall.money/thanksazaza').form-control
                button.copy-btn
              .partners-info__description получайте 10-30% от прибыли с переводов.
                a(href='#') Подробнее
      #links.tab-pane.fade(role='tabpanel', aria-labelledby='links-tab')
